<%= div_for @article do %>
 <h3>
   <%= link_to @article.title, article_path(@article) %>
   <font size=1><%= @article.published_at %></font>
   <% if @article.owned_by? current_user %>
   <span class='actions'>
     <%= link_to "Edit", edit_article_path(@article), "data-no-turbolink" => true %>
     <%= link_to "Delete", @article, :confirm => "Are you sure?", :method => :delete %>
   <% end %>
   </span>
 </h3>
 <%=  raw(@article.body).html_safe %>
<% end %>
