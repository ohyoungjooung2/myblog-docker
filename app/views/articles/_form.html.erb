
<%=  form_for(@article) do |f|  %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
   <div class="field">
    <label for="titleField"><%= f.label :title %></label>
    <%= f.text_field :title, :size => 33, :class=>'form-control' %>
   </div>
  </div>

  <div class="form-group">
   <div class="field">
     <label for="locationField"><%= f.label :location %></label>
     <%= f.text_field :location, :size => 37, :class=>'form-control' %>
   </div>
  </div>

  <div class="form-group">
   <div class="field">
     <%= f.label "Categories" %>
        <% @categories = Category.all %>
        <%= select_tag 'article[category_id]',options_for_select(@categories.collect{ |u| [u.name,u.id]}),:class=>"form-control" %>
   </div>
  </div>

  <div class="form-group">
   <div class="field">
     <label for="excerptField"><%= f.label :excerpt %></label>
     <%= f.text_field :excerpt, :size => 33, :class=>'form-control' %>
   </div>
  </div>

  <div class="form-group">
   <div class="field">
     <%= f.text_area  :body, :class => "tinymce", :rows=> 14, :cols => 30  %>
   </div>
  </div>

  <div class="form-group">
    <div class="field text-center">
      <lable for="publishedatField"> <%= f.label :published_at %></label>
      <%= f.datetime_select :published_at %>
    </div>
  </div>

  <div class="form-group">
  <div class="actions">
     <!--<%= submit_or_cancel(f) %>-->
     <p class="text-center"> <%= button_to "submit", new_article_path, method: :post,data: { confirm: 'Are you sure?' }, remote: true,:class=>"btn-sm btn-info" %></p>
   </div>
  </div>
<% end %>

